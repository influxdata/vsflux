{
  "name": "flux",
  "version": "0.3.1",
  "publisher": "influxdata",
  "displayName": "Flux",
  "description": "Flux language extension for VSCode",
  "author": "InfluxData",
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/influxdata/vsflux.git"
  },
  "bugs": {
    "url": "https://github.com/influxdata/vsflux/issues"
  },
  "galleryBanner": {
    "color": "#F2F2F2",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.39.0"
  },
  "activationEvents": [
    "onLanguage:flux",
    "onView:influxdb",
    "onCommand:influxdb.addConnection"
  ],
  "main": "./dist/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "influxdb",
          "name": "InfluxDB"
        }
      ]
    },
    "keybindings": [
      {
        "command": "influxdb.runQuery",
        "key": "ctrl+alt+e",
        "when": "editorLangId == flux"
      }
    ],
    "languages": [
      {
        "id": "flux",
        "aliases": [
          "Flux"
        ],
        "extensions": [
          ".flux"
        ]
      }
    ],
    "commands": [
      {
        "command": "influxdb.refresh",
        "title": "Refresh",
        "category": "InfluxDB"
      },
      {
        "command": "influxdb.addConnection",
        "title": "Add Connection",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        },
        "category": "InfluxDB"
      },
      {
        "command": "influxdb.runQuery",
        "title": "Run Query",
        "category": "InfluxDB"
      },
      {
        "command": "influxdb.deleteConnection",
        "title": "Delete Connection",
        "category": "InfluxDB"
      },
      {
        "command": "influxdb.editConnection",
        "title": "Edit Connection",
        "category": "InfluxDB"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "influxdb.addConnection",
          "when": "view == influxdb",
          "group": "navigation@1"
        }
      ],
      "editor/context": [
        {
          "command": "influxdb.runQuery",
          "when": "editorLangId == flux",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "influxdb.runQuery",
          "when": "view == influxdb && viewItem == connection",
          "group": "influxdb@1"
        },
        {
          "command": "influxdb.deleteConnection",
          "when": "view == influxdb && viewItem == connection",
          "group": "influxdb@1"
        },
        {
          "command": "influxdb.editConnection",
          "when": "view == influxdb && viewItem == connection",
          "group": "influxdb@1"
        }
      ]
    },
    "grammars": [
      {
        "language": "flux",
        "scopeName": "flux",
        "path": "./syntaxes/flux.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "flux",
        "path": "./snippets/flux.json"
      }
    ],
    "configuration": [
      {
        "title": "FLUX",
        "properties": {
          "vsflux.defaultInfluxDBURL": {
            "default": "http://localhost:9999",
            "description": "The default URL when adding a new influxdb connection"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production && cp -rf node_modules/@influxdata/flux-lsp-cli/out dist/.",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/mustache": "^0.8.32",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.39.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4",
    "vscode-test": "^1.2.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "@influxdata/flux-lsp-cli": "0.4.3",
    "mustache": "^3.1.0",
    "axios": "0.19.2",
    "uuid": "^3.3.3",
    "vscode-languageclient": "^5.2.1"
  },
  "homepage": "https://github.com/influxdata/vsflux#readme",
  "license": "MIT"
}
