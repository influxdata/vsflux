{
  "name": "flux",
  "displayName": "Flux for VSCode",
  "description": "Flux language extension for VSCode",
  "version": "0.0.1",
  "icon": "images/icon.png",
  "author": "InfluxData",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/influxdata/vsflux.git"
  },
  "bugs": {
    "url": "https://github.com/influxdata/vsflux/issues"
  },
  "galleryBanner": {
    "color": "#F2F2F2",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.39.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:flux"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "flux",
        "aliases": [
          "Flux"
        ],
        "extensions": [
          ".flux"
        ]
      }
    ],
    "grammars": [
      {
        "language": "flux",
        "scopeName": "flux",
        "path": "./syntaxes/flux.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "flux",
        "path": "./snippets/flux.json"
      }
    ],
    "configuration": {
      "title": "flux configuration",
      "properties": {
        "lsp_server_path": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies path to flux language server binary if it's not in PATH"
        },
        "influx_path": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Specifies path to influx cli binary if it's not in PATH"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/keytar": "^4.0.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/request-promise": "^4.1.41",
    "@types/vscode": "^1.39.0",
    "@types/which": "^1.2.14",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "ts-loader": "^6.2.1",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-languageclient": "^5.2.1",
    "vscode-test": "^1.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "request-promise": "4.2.5",
    "request": "2.88.0"
  },
  "homepage": "https://github.com/influxdata/vsflux#readme",
  "license": "ISC"
}
