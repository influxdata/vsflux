{
  "name": "flux",
  "version": "0.3.1",
  "publisher": "influxdata",
  "displayName": "Flux",
  "description": "Flux language extension for VSCode",
  "author": "InfluxData",
  "icon": "images/icon.png",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/influxdata/vsflux.git"
  },
  "bugs": {
    "url": "https://github.com/influxdata/vsflux/issues"
  },
  "galleryBanner": {
    "color": "#F2F2F2",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "activationEvents": [
    "onLanguage:flux",
    "onView:influxdb",
    "onCommand:influxdb.addConnection"
  ],
  "main": "./dist/extension",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "influxdb",
          "name": "InfluxDB"
        }
      ]
    },
    "keybindings": [
      {
        "command": "influxdb.runQuery",
        "key": "ctrl+alt+e",
        "when": "editorLangId == flux"
      }
    ],
    "languages": [
      {
        "id": "flux",
        "aliases": [
          "Flux"
        ],
        "extensions": [
          ".flux"
        ]
      }
    ],
    "commands": [
      {
        "command": "influxdb.refresh",
        "title": "Refresh",
        "category": "InfluxDB"
      },
      {
        "command": "influxdb.addConnection",
        "title": "Add Connection",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        },
        "category": "InfluxDB"
      },
      {
        "command": "influxdb.runQuery",
        "title": "Run Query",
        "category": "InfluxDB"
      },
      {
        "command": "influxdb.deleteConnection",
        "title": "Delete Connection",
        "category": "InfluxDB"
      },
      {
        "command": "influxdb.editConnection",
        "title": "Edit Connection",
        "category": "InfluxDB"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "influxdb.addConnection",
          "when": "view == influxdb",
          "group": "navigation@1"
        }
      ],
      "editor/context": [
        {
          "command": "influxdb.runQuery",
          "when": "editorLangId == flux",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "influxdb.editConnection",
          "when": "view == influxdb && viewItem == connection",
          "group": "influxdb@1"
        },
        {
          "command": "influxdb.deleteConnection",
          "when": "view == influxdb && viewItem == connection",
          "group": "influxdb@1"
        }
      ]
    },
    "grammars": [
      {
        "language": "flux",
        "scopeName": "flux",
        "path": "./syntaxes/flux.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "flux",
        "path": "./snippets/flux.json"
      }
    ],
    "configuration": [
      {
        "title": "FLUX",
        "properties": {
          "vsflux.defaultInfluxDBURLs": {
            "default": [
              "http://localhost:9999",
              "https://us-central1-1.gcp.cloud2.influxdata.com",
              "https://us-west-2-1.aws.cloud2.influxdata.com",
              "https://eu-central-1-1.aws.cloud2.influxdata.com"
            ],
            "description": "The URL lists of influxdb 2"
          },
          "vsflux.defaultInfluxDBV2URL": {
            "default": "http://localhost:9999",
            "description": "The default URL when adding a new influxdb connection"
          },
          "vsflux.defaultInfluxDBV1URL": {
            "default": "http://localhost:8086",
            "description": "The default URL when adding a new influxdb v1 connection"
          }
        }
      }
    ]
  },
  "scripts": {
    "copy-wasm": "rm -f dist/flux-lsp-node_bg.wasm && cp node_modules/@influxdata/flux-lsp-cli/node_modules/@influxdata/flux-lsp-node/flux-lsp-node_bg.wasm dist/",
    "vscode:prepublish": "npm run webpack-prod && npm run copy-wasm",
    "webpack-dev": "webpack --mode development --watch",
    "webpack-prod": "webpack --mode production",
    "compile": "tsc"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.7",
    "@types/mustache": "^0.8.32",
    "@types/node": "^12.12.28",
    "@types/through2": "^2.0.34",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "expect": "^25.1.0",
    "glob": "^7.1.5",
    "mocha": "^6.2.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.2",
    "vscode-test": "^1.2.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@influxdata/flux-lsp-cli": "^0.5.6",
    "axios": "0.19.2",
    "mustache": "^3.2.1",
    "through2": "^3.0.1",
    "uuid": "^3.4.0",
    "vscode-languageclient": "^5.2.1"
  },
  "homepage": "https://github.com/influxdata/vsflux#readme",
  "license": "MIT"
}
